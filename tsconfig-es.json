{
    "compilerOptions": {
        "outDir": "./lib/esm",
        "allowJs": false,
        "target": "ES2015",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./src/service.ts",
        "./src/index.ts"
    ]
}